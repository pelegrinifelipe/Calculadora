#include <iostream>
#include <stdlib.h>
#include <math.h>


int main() 
{
using namespace std;
    int n1, n2, som, sub, mult, div;
	cout << "Digite o primeiro número: " << endl;
    cin >> n1;
    cout << "Digite o segundo número: " << endl;
    cin >> n2;

    cout << "A soma e: " << n1 + n2 << endl;
    cout << "A subtracao e: " << n1 - n2 << endl;
    cout << "O produto e: " << n1 * n2 << endl;
    cout << "A divisao e: " << n1 / n2 << endl;
    cout << "A potencia é: " << pow(n1,n2) << endl;


    system("pause");
    return 0;
}
